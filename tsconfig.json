{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "typeRoots" : ["node_modules/@types", "src/types"]
    },
    "include": [
        "server/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings.d.ts"
, "server/main.ts"    ],
    "exclude": [
        "node_modules"
    ]
}