{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
          }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}